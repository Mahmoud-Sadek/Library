<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mahmoud.library">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Control"
            android:label="@string/title_activity_control"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddBook"
            android:label="@string/title_activity_add_book"
            android:parentActivityName=".Control"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mahmoud.library.Control" />
        </activity>
        <activity
            android:name=".ShowAllBooks"
            android:label="@string/title_activity_show_all_books"
            android:parentActivityName=".Control"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mahmoud.library.Control" />
        </activity>
        <activity
            android:name=".MyBooks"
            android:label="@string/title_activity_my_books"
            android:parentActivityName=".Control"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mahmoud.library.Control" />
        </activity>
    </application>

</manifest>
